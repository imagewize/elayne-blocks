<?xml version="1.0"?>
<ruleset name="Elayne Blocks Plugin">
    <description>Coding standards for Elayne Blocks Plugin</description>

    <!-- Use WordPress standards -->
    <rule ref="WordPress" />

    <!-- Check PHP files only -->
    <arg name="extensions" value="php"/>

    <!-- Show progress and use colors -->
    <arg value="ps"/>
    <arg name="colors"/>

    <!-- Exclusions -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/blocks/*/build/*</exclude-pattern>
    <exclude-pattern>*/blocks/carousel/slick/*</exclude-pattern>
    <exclude-pattern>*/patterns/*</exclude-pattern>

    <!-- Minimum PHP version -->
    <config name="minimum_supported_wp_version" value="6.7"/>
    <config name="testVersion" value="7.3-"/>

    <!-- Text domain check -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="elayne-blocks"/>
            </property>
        </properties>
    </rule>
</ruleset>
