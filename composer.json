{
    "name": "imagewize/elayne-blocks",
    "type": "wordpress-plugin",
    "description": "Custom WordPress blocks for the Elayne theme including Mega Menu, Carousel, and Slide blocks",
    "keywords": [
        "wordpress",
        "plugin",
        "blocks",
        "gutenberg",
        "carousel",
        "mega-menu",
        "elayne"
    ],
    "homepage": "https://github.com/imagewize/elayne-blocks",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Jasper Frumau",
            "homepage": "https://github.com/imagewize"
        }
    ],
    "support": {
        "issues": "https://github.com/imagewize/elayne-blocks/issues",
        "source": "https://github.com/imagewize/elayne-blocks"
    },
    "require": {
        "php": ">=7.3",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "wp-coding-standards/wpcs": "^3.0.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "ELayneBlocks\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude node_modules --exclude blocks/*/build .",
        "wpcs:scan": "@php -d memory_limit=512M ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=phpcs.xml.dist .",
        "wpcs:fix": "@php -d memory_limit=512M ./vendor/squizlabs/php_codesniffer/bin/phpcbf --standard=phpcs.xml.dist .",
        "phpcs": "phpcs -d memory_limit=512M",
        "phpcbf": "phpcbf -d memory_limit=512M",
        "test": "phpunit"
    }
}
