{
    "name": "imagewize/elayne-blocks",
    "type": "wordpress-plugin",
    "description": "Custom WordPress blocks for the Elayne theme including Mega Menu, Carousel, and Slide blocks",
    "keywords": [
        "wordpress",
        "plugin",
        "blocks",
        "gutenberg",
        "carousel",
        "mega-menu",
        "elayne"
    ],
    "homepage": "https://github.com/imagewize/elayne-blocks",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Jasper Frumau",
            "homepage": "https://github.com/imagewize"
        }
    ],
    "support": {
        "issues": "https://github.com/imagewize/elayne-blocks/issues",
        "source": "https://github.com/imagewize/elayne-blocks"
    },
    "require": {
        "php": ">=7.3",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ELayneBlocks\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress .",
        "phpcbf": "phpcbf --standard=WordPress .",
        "test": "phpunit"
    }
}
